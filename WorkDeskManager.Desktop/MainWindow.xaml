<Window x:Class="WorkDeskManager.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Workdesk Manager v1.0" Height="350" Width="546" Icon="pack://siteoforigin:,,,/Resources/favicon.ico" StateChanged="Window_StateChanged" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,13,0">
        <ComboBox x:Name="TaskList" HorizontalAlignment="Left" Margin="52,26,0,0" VerticalAlignment="Top" Width="272" SelectionChanged="TaskList_SelectionChanged"/>
        <ListBox x:Name="ActivityList" HorizontalAlignment="Left" Height="100" Margin="52,95,0,0" VerticalAlignment="Top" Width="272"/>
        <Button x:Name="btnAddNewTask" Content="Add New" HorizontalAlignment="Left" Margin="451,26,0,0" VerticalAlignment="Top" Width="56" Click="btnAddNewTask_Click" Height="22"/>
        <Button x:Name="btnEditTask" Content="Edit" HorizontalAlignment="Left" Margin="329,26,0,0" VerticalAlignment="Top" Width="56" Height="22"/>
        <Button x:Name="btnDeleteTask" Content="Delete" HorizontalAlignment="Left" Margin="390,26,0,0" VerticalAlignment="Top" Width="56" Height="22"/>
        <TextBox x:Name="txtWorksheetUrl" HorizontalAlignment="Left" Height="23" Margin="52,53,0,0" VerticalAlignment="Top" Width="272" MaxLines="1" GotFocus="txtWorksheetUrl_GotFocus" GotKeyboardFocus="txtWorksheetUrl_GotKeyboardFocus"/>
        <Label Content="Task:" HorizontalAlignment="Left" Margin="9,22,0,0" VerticalAlignment="Top"/>
        <Label Content="URL:" HorizontalAlignment="Left" Margin="9,50,0,0" VerticalAlignment="Top"/>
        <Button Content="Manage" HorizontalAlignment="Left" Margin="52,267,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Window>
